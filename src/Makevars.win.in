CXX_STD = CXX20

## Compiler flags/defines:
PKG_LIBS = @VISIBILITY_LDFLAGS@  -lgdi32
PKG_CXXFLAGS = -DRAY_REPRODUCE_PERLIN -DSTRICT_R_HEADERS -DRAY_WINDOWS -DHAS_SSE -DRAYSIMD -DRAYSIMDVECOFF @PKG_CXXFLAGS@

RcppExports.o: CXXFLAGS := $(filter-out -fvisibility=hidden -fvisibility-inlines-hidden,$(CXXFLAGS))

## Files to compile:
SOURCES=@DIR_SOURCES@ @SUBDIR_SOURCES@ pbrt/util/colorspace.cpp
OBJECTS=$(SOURCES:.c=.o) $(SOURCES:.cpp=.o)

## Build the DLL:
all: $(SHLIB)

$(SHLIB) : $(OBJECTS)

## Clean up object files:
clean:
	@rm -f $(OBJECTS)
