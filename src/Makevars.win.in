CXX_STD = CXX20

## Compiler flags/defines:
PKG_CPPFLAGS = @PKG_CPPFLAGS@ 
PKG_LIBS = @VISIBILITY_LDFLAGS@  -lgdi32
PKG_CXXFLAGS = -DRAY_REPRODUCE_PERLIN -DSTRICT_R_HEADERS -DRAY_WINDOWS -DHAS_SSE -DRAYSIMD -DRAYSIMDVECOFF @PKG_CXXFLAGS@

## Files to compile:
C_SOURCES=@EXT_C_SOURCES@
C_OBJECTS=$(C_SOURCES:.c=.o)

## Files to compile: (add in pbrt/util/colorspace.cpp)
SOURCES=@DIR_SOURCES@ @SUBDIR_SOURCES@ @EXT_CPP_SOURCES@
OBJECTS=$(SOURCES:.c=.o) $(SOURCES:.cpp=.o)

## Build the DLL:
all: $(SHLIB)

$(SHLIB) : $(OBJECTS)

## Clean up object files:
clean:
	@rm -f $(OBJECTS)
